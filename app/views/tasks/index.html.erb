<%=render 'order_form' %>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>終了期限</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="task_id"><%= task.id %></td>
      <td class="task_title"><%= link_to task.title, task_path(task.id) %></td>
      <td class="task_deadline"><%= l task.deadline, format: :short %></td>
    </tr>
  <% end %>
</table>
