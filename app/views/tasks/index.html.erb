<h1>TODOリスト</h1>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>ステータス</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="task_id"><%= task.id %></td>
      <td class="task_title">
        <%= link_to task.title, task_path(task.id) %>
      </td>
      <td class="task_status"><%= I18n.t("enums.task.type.#{task.status}") %></td>
    </tr>
  <% end %>
</table>
<%= link_to "作成", new_task_path %>
