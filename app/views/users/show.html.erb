<div class='admin-show__header'>
  <%= link_to admin_users_path do %>
    <div class='admin-back'>
      <i class='fas fa-angle-left admin-back__icon'></i>
      <p>一覧</p>
    </div>
  <% end %>
  <p class='admin-show__title'>ユーザー情報</p>
</div>
<ul class='admin-show__list'>
  <li>
    <p><%= @user.name %></p>
  </li>
  <li>
    <p><%= @user.mail %></p>
  </li>
  <li>
    <p><%= @user.admin %></p>
  </li>
  <li class='admin-option__height'>
    <div class='admin-option'>
      <%= link_to '編集', edit_admin_user_path(@user.id), class: 'button-red space-r' %>
      <%= link_to '削除', user_path(@user.id), method: "delete", class: 'button-red' %>
    </div>
  </li>
  <li>
    <p class='admin-show__tasks'>タスク一覧</p>
  </li>
  <% @user.tasks.each do |task| %>
    <%= link_to task_path(task.id) do %>
      <li>
        <p><%= task.title %></p>
      </li>
    <% end %>
  <% end %>
</ul>
